{% extends "includes/base.twig" %}

{% block scripts %}
<script type="text/javascript" src="{{ staticurl }}/js/home.js"></script>
{% endblock %}

{% block content %}
<div class="col-xs-12">
	<div class="panel-group" id="accordion">
		<div class="panel panel-default">
			<div class="panel-heading clickable"  data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
				<h4 class="panel-title">
					<a>
						Add timers
					</a>
				</h4>
			</div>
			<div id="collapseOne" class="panel-collapse collapse timer-form">
				<div class="panel-body">
					<div class="col-xs-12">
						<div class="col-xs-6">
							<select name="seed" id="select-seed" class="form-control">
								{% for seed in seeds %}
								<option value="{{ seed.id }}">{{ seed.name }}</option>
								{% endfor %}
							</select>
						</div>
						<div class="col-xs-6">
							<input type="text" name="seed-filter" id="seed-filter" class="form-control" placeholder="filter">
						</div>
					</div>
					<div class="col-xs-12 row-buffer">
						<div class="col-xs-6">
							<textarea name="notes" id="textarea-notes" cols="30" rows="3" class="form-control" placeholder="notes"></textarea>
						</div>
						<div class="btn-group col-xs-6">
							{% for climate in climates %}
							<button 
								type="button"
								value="{{ climate.id }}"
								class="btn btn-default radio-climate"
								>
								{{ climate.name }}
							</button>
							{% endfor %}
						</div>
					</div>
					<div class="col-xs-12 row-buffer">
						<div class="col-xs-6">
							<input id="add-timer" type="submit" class="btn btn-default" class="form-control" value="add" />
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="col-xs-12" id="timers">
</div>
<div class="row timer template">
	<div class="col-xs-3 text-center name"></div>
	<div class="col-xs-2 text-center time-done">
		<div class="date col-xs-12"></div>
		<div class="time col-xs-12"></div>
	</div>
	<div class="col-xs-2 text-center time-left"></div>
	<div class="col-xs-5 text-center time-left-edit no-display">
		
		<div class="col-xs-2"><input type="text" class="form-control input-sm days">d</div>
		<div class="col-xs-2"><input type="text" class="form-control input-sm hours">h</div>
		<div class="col-xs-2"><input type="text" class="form-control input-sm minutes">m</div>
		<div class="col-xs-6">
			<button class="btn btn-default input-sm time-left-edit-submit">
				save
			</button>
			<button class="btn btn-default input-sm time-left-edit-discard">
				discard
			</button>
		</div>
	</div>
	<div class="col-xs-3 text-center notes"></div>
	<div class="col-xs-2 text-center options">
		<div class="btn btn-default btn-xs harvest-timer no-display">harvest</div>
		<div class="btn btn-default btn-xs restart-timer no-display">reset</div>
		<div
			class="btn btn-default btn-xs grow-timer no-display"
			title="This button sets the timer to ready"
			>grow</div>
		<div class="btn btn-default btn-xs edit-timer">edit</div>
		<div class="btn btn-default btn-xs delete-timer">delete</div>
	</div>
</div>

{% endblock %}
