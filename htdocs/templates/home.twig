{% extends "includes/base.twig" %}

{% block scripts %}
<script type="text/javascript" src="{{ staticurl }}/js/home.js"></script>
{% endblock %}

{% block content %}
<div class="col-sm-12">
	<div class="panel-group" id="accordion">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4 class="panel-title">
					<a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
						Add timers
					</a>
				</h4>
			</div>
			<div id="collapseOne" class="panel-collapse collapse">
				<div class="panel-body">
					<div class="col-sm-12">
						<div class="col-sm-6">
							<select name="seed" id="select-seed" class="form-control">
								{% for seed in seeds %}
								<option value="{{ seed.id }}">{{ seed.name }}</option>
								{% endfor %}
							</select>
						</div>
						<div class="col-sm-6">
							<input type="text" name="seed-filter" id="seed-filter" class="form-control" placeholder="filter">
						</div>
					</div>
					<div class="col-sm-12 row-buffer"></div>
					<div class="col-sm-12">
						<div class="col-sm-6">
							<textarea name="notes" id="textarea-notes" cols="30" rows="3" class="form-control" placeholder="notes"></textarea>
						</div>
						<div class="col-sm-6">
							<input id="add-timer" type="submit" class="btn btn-default" class="form-control" value="add" />
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="col-sm-12" id="timers">
</div>
<div class="row timer template">
	<div class="col-sm-3 text-center name"></div>
	<div class="col-sm-2 text-center time-done">
		<div class="date col-sm-12"></div>
		<div class="time col-sm-12"></div>
	</div>
	<div class="col-sm-2 text-center time-left"></div>
	<div class="col-sm-3 text-center notes"></div>
	<div class="col-sm-2 text-center options">
		<div href="#" class="btn btn-default delete-timer">delete</div>
	</div>
</div>

{% endblock %}
